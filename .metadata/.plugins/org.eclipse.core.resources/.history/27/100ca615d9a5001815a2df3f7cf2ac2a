<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
    
<mapper namespace="org.zerock.board.service.mapper.BoardMapper">
    
    <select id="selectBoardList" parameterType="org.zerock.board.service.BoardVO" resultType="org.zerock.board.service.BoardVO">
        select * from board
    </select>
    
    <insert id="insertBoard">
        insert into
        board(
            title
            , content
            , writer
            , reg_datetime)
        values(
            #{title}
            , #{content}
            , #{writer}
            , now())
    </insert>
    
    <update id="updateBoard">
        update board set
            title = #{title}
            , content = #{content}
            , writer = #{writer}
            , reg_datetime = now()
        where
            code = #{code}
    </update>
    
    <delete id="deleteBoard">
        delete from board
        where
            code = #{code}
    </delete>
    
    <select id="selectBoardByCode" parameterType="org.zerock.board.service.BoardVO" resultType="org.zerock.board.service.BoardVO">
        select * from board
        where
            code = #{code}
    </select>
    
    <select id="listPage" resultType="BoardVO">
    <![CDATA[
    	select
    		code, title, content, writer, reg_datetime
    		from
    			board
    		where code > 0
    		order by code desc, regdate desc
    		limit #{page}, 10
    ]]>
    </select>
</mapper>
